#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t; cin>>t;
    while(t--){
        int a,b,c,n;
        cin>>a>>b>>c>>n;
        int maX=max(a,max(b,c));
        int res=a+b+c+n;
        if(res%3==0 and res/3>=maX) cout<<"YES"<<'\n';
        else cout<<"NO"<<'\n';
    }
    return 0;
}
